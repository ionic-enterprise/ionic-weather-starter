{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": []
  },
  "files": ["src/main.ts", "src/polyfills.ts"],
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": [
    "src/**/*.mock.ts",
    "src/**/*.prod.ts",
    "src/**/*.spec.ts",
    "src/**/test.ts",
    "src/**/testing.ts"
  ]
}
